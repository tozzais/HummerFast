<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textAllCaps">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="colorPrimary">@color/baseColor</item>
        <item name="colorPrimaryDark">@color/baseColor</item>
        <item name="colorAccent">@color/baseColor</item>
        <item name="android:windowAnimationStyle">@style/Animation_Activity</item>
    </style>


    <style name="WelComeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textAllCaps">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="colorPrimary">@color/baseColor</item>
        <item name="colorPrimaryDark">@color/baseColor</item>
        <item name="colorAccent">@color/baseColor</item>
        <item name="android:windowAnimationStyle">@style/Animation_Activity</item>
        <item name="android:windowBackground">@drawable/splash_preview</item>
        <item name="android:gravity">center</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="base_text_style_gray_small" parent="base_text_style">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grayText</item>
    </style>

    <style name="base_text_style" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_title_color</item>
    </style>

    <style name="base_text_style1" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@drawable/shape_circle_red</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="base_text_style_bold" parent="base_text_style" >
        <item name="android:textStyle">bold</item>
    </style>

    <style name="large_text_blue_style" parent="base_text_style" >
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/baseColor</item>
    </style>


    <style name="small_text_gray_style" parent="base_text_style" >
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grayText</item>
    </style>

    <style name="gray_text_10sp" parent="base_text_style" >
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/grayText</item>
    </style>

    <style name="gray_text_11sp" parent="base_text_style" >
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/grayText</item>
    </style>

    <style name="white_text_bold_15sp" parent="base_text_style" >
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="black_text_bold_15sp" parent="base_text_style" >
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="black_text_bold_13sp" parent="black_text_bold_15sp" >
        <item name="android:textSize">13sp</item>
    </style>

    <style name="blue_text_15sp" parent="base_text_style" >
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="blue_text_12sp" parent="base_text_style" >
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="blue_text_14sp" parent="base_text_style" >
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="black_text_12sp" parent="base_text_style" >
        <item name="android:textSize">12sp</item>
    </style>

    <style name="black_text_13sp" parent="base_text_style" >
        <item name="android:textSize">13sp</item>
    </style>

    <style name="black_text_15sp" parent="base_text_style" >
        <item name="android:textSize">15sp</item>
    </style>
    <style name="login_btn_style" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/shape_blue5</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btn_blue_bg_white_text" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@drawable/shape_blue5</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btn_blue_bg_white_text_leftpadding5" parent="btn_blue_bg_white_text">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="btn_white_bg_blue_text" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@drawable/shape_line_blue5</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/baseColor</item>
    </style>

    <style name="base_btn_style" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:background">@drawable/shape_line_blue5</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/baseColor</item>
    </style>

    <style name="btn_gray_line_blue_text" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@drawable/shape_line_gray5</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/baseColor</item>
    </style>




    <style name="et_style" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black_title_color</item>
        <item name="android:textColorHint">@color/grayText</item>
    </style>


    <style name="pop_add">
        <item name="android:windowEnterAnimation">@anim/pop_add_show</item>
        <item name="android:windowExitAnimation">@anim/pop_add_hide</item>
    </style>


</resources>
