<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white5"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:orientation="vertical"
    android:id="@+id/ll_root"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <View
            android:layout_width="2dp"
            android:layout_height="15dp"
            android:background="@color/baseColor"/>

        <TextView
            android:id="@+id/tv_text1"
            style="@style/small_text_gray_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="订单号：12312341235125"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>

        <TextView
            android:id="@+id/tv_text2"
            style="@style/small_text_gray_style"
            android:drawableRight="@mipmap/icon_arrow_gray_right"
            android:text="待确认"
            android:drawablePadding="3dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>



    </LinearLayout>

    <View
        style="@style/line_light"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        >

        <com.xianlv.business.weight.SquareRoundImageView
            android:id="@+id/iv_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            tools:background="@mipmap/demo_video"
            android:scaleType="centerCrop"
            />



        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="12dp">


            <TextView
                android:id="@+id/tv_text3"
                style="@style/base_text_style_bold"
                android:text="爱心蛋糕"
                android:maxLines="2"
                android:ellipsize="end"
                />




            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tv_text4"
                    style="@style/small_text_gray_style"
                    android:text="规格：双人餐"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    />
<!--                -->
<!--                <TextView-->
<!--                    android:id="@+id/tv_text5"-->
<!--                    style="@style/small_text_gray_style"-->
<!--                    android:text="￥208"-->
<!--                    android:textColor="@color/baseColor"-->
<!--                    android:layout_weight="1"-->
<!--                    android:layout_marginTop="5dp"-->
<!--                    />-->

                <TextView
                    android:id="@+id/tv_text6"
                    style="@style/small_text_gray_style"
                    android:text="数量：*1"
                    android:layout_marginTop="5dp"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>



        </LinearLayout>











    </LinearLayout>



    <View
        android:id="@+id/view"
        style="@style/line_light"
        android:layout_margin="12dp"
        />




    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="12dp"
        android:paddingLeft="12dp">



        <TextView
            android:id="@+id/tv_money1"
            style="@style/blue_text_14sp"
            android:layout_weight="1"
            android:text=""/>

        <TextView
            android:id="@+id/tv_cancel"
            style="@style/btn_white_bg_blue_text"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="取消"/>

        <TextView
            android:id="@+id/tv_sure"
            style="@style/btn_blue_bg_white_text"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="确认"
            android:layout_marginLeft="12dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
</LinearLayout>