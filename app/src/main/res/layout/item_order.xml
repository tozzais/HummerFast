<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white5"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:orientation="vertical"
    android:id="@+id/ll_root"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <View
            android:layout_width="2dp"
            android:layout_height="15dp"
            android:background="@color/baseColor"/>

        <TextView
            android:id="@+id/tv_text1"
            style="@style/small_text_gray_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="订单号：227738945"
            android:layout_marginLeft="12dp"
            android:drawableRight="@mipmap/icon_arrow_gray_right"
            android:layout_marginRight="12dp"/>



    </LinearLayout>

    <View
        style="@style/line_light"
        android:layout_margin="12dp"
        />


    <TextView
        android:id="@+id/tv_text2"
        style="@style/base_text_style_bold"
        android:text="香港海洋公园万豪酒店"
        android:layout_marginLeft="12dp"/>


    <TextView
        android:id="@+id/tv_text3"
        style="@style/small_text_gray_style"
        android:text="入住时间：4-13~4-15 1晚"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="12dp"/>

    <TextView
        android:id="@+id/tv_text4"
        style="@style/small_text_gray_style"
        android:text="房型：俱乐部客房"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="12dp"/>


    <View
        style="@style/line_light"
        android:layout_margin="12dp"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="12dp">

        <TextView
            style="@style/btn_white_bg_blue_text"
            android:text="拒绝"/>

        <TextView
            style="@style/btn_blue_bg_white_text"
            android:text="确认"
            android:layout_marginLeft="12dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>






</LinearLayout>