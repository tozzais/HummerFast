<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/shape_white5"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                style="@style/black_text_bold_15sp"
                android:text="上海香格里拉大酒店" />

            <TextView
                style="@style/small_text_gray_style"
                android:layout_marginTop="12dp"
                android:text="上海市黄浦延安西路789号" />

            <TextView
                style="@style/small_text_gray_style"
                android:layout_marginTop="8dp"
                android:text="021-12345677" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/shape_white5"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                style="@style/black_text_bold_13sp"
                android:layout_width="80dp"
                android:text="姓名：" />

            <EditText
                style="@style/et_style"
                android:hint="请输入姓名"
                android:inputType="text"
                android:text="" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/shape_white5"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                style="@style/black_text_bold_13sp"
                android:layout_width="80dp"
                android:text="手机号：" />

            <EditText
                style="@style/et_style"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11"
                android:text="" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/shape_white5"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                style="@style/black_text_bold_13sp"
                android:layout_width="80dp"
                android:text="部门：" />

            <EditText
                style="@style/et_style"
                android:hint="请选择"
                android:inputType="text"
                android:maxLength="11"
                android:text="" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/shape_white5"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                style="@style/black_text_bold_13sp"
                android:layout_width="80dp"
                android:text="身份证号：" />

            <EditText
                android:id="@+id/et_pass"
                style="@style/et_style"
                android:hint="请输入"
                android:inputType="text"
                android:maxLength="18"
                android:text="" />


        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:padding="12dp">

        <TextView
            android:id="@+id/btn_bottom"
            style="@style/btn_blue_bg_white_text"
            android:text="确认" />
    </RelativeLayout>
</LinearLayout>


