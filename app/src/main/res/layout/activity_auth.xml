<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/gray_bg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/shape_white5"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tv_hotel_name"
                style="@style/black_text_bold_15sp"
                tools:text="上海香格里拉大酒店" />

            <TextView
                android:id="@+id/tv_address"
                style="@style/small_text_gray_style"
                android:layout_marginTop="12dp"
                tools:text="上海市黄浦延安西路789号" />

            <TextView
                android:id="@+id/tv_phone"
                style="@style/small_text_gray_style"
                android:layout_marginTop="8dp"
                tools:text="021-12345677" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/shape_white5"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                style="@style/black_text_bold_13sp"
                android:layout_width="80dp"
                android:text="姓名：" />

            <EditText
                android:id="@+id/et_name"
                style="@style/et_style"
                android:hint="请输入姓名"
                android:inputType="text"
                android:text="" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/shape_white5"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                style="@style/black_text_bold_13sp"
                android:layout_width="80dp"
                android:text="手机号：" />

            <EditText
                android:id="@+id/et_phone"
                style="@style/et_style"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11"
                android:text="" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/shape_white5"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                style="@style/black_text_bold_13sp"
                android:layout_width="80dp"
                android:text="验证码：" />

            <EditText
                android:id="@+id/et_code"
                style="@style/et_style"
                android:hint="请输入验证码"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="text"
                android:maxLength="11"
                android:text="" />

            <View
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:background="@color/blue"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_code"
                style="@style/base_text_style"
                android:textSize="12sp"
                android:layout_height="match_parent"
                android:layout_width="80dp"
                android:gravity="center"
                android:textColor="@color/blue"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="获取验证码"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/shape_white5"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                style="@style/black_text_bold_13sp"
                android:layout_width="80dp"
                android:text="部门：" />

            <TextView
                android:id="@+id/et_part"
                style="@style/et_style"
                android:hint="请输入"
                android:inputType="text"
                android:maxLength="18"
                android:text="" />


        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:padding="12dp">

        <TextView
            android:id="@+id/btn_bottom"
            style="@style/base_btn_style_large"
            android:background="@drawable/shape_blue5"
            android:text="确认" />
    </RelativeLayout>
</LinearLayout>


