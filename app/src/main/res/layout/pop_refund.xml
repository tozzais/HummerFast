<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_white5"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/shape_white5"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                style="@style/base_text_style"
                android:paddingLeft="100dp"
                android:paddingRight="100dp"
                android:lines="1"
                android:text="应退款金额" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/tv_money"
                    style="@style/black_text_bold_15sp"
                    android:textSize="50sp"
                    tools:text="￥455"
                    android:textColor="@color/baseColor"
                    />


            </LinearLayout>

            <View
                style="@style/line_light"/>

            <TextView
                style="@style/black_text_13sp"
                android:textColor="@color/grayText"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:text="扣款明细" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_list"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/shape_gray5"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_weight="1"
                style="@style/btn_white_bg_blue_text"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="取消" />

            <TextView
                android:id="@+id/btn_sure"
                style="@style/btn_blue_bg_white_text"
                android:layout_marginLeft="40dp"
                android:layout_weight="1"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="确认" />

        </LinearLayout>



    </LinearLayout>



</LinearLayout>


