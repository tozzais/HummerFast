<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="12dp">

        <TextView
            style="@style/black_text_bold_13sp"
            android:layout_width="80dp"
            android:text="储值卡名称：" />

        <EditText
            style="@style/et_style"
            android:inputType="text"
            android:text="金桥店储值卡" />


    </LinearLayout>

    <View
        style="@style/line_light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="12dp">

        <TextView
            style="@style/black_text_bold_13sp"
            android:layout_width="80dp"
            android:text="客户名称：" />

        <EditText
            style="@style/et_style"
            android:inputType="text"
            android:text="张先生" />


    </LinearLayout>

    <View
        style="@style/line_light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="12dp">

        <TextView
            style="@style/black_text_bold_13sp"
            android:layout_width="80dp"
            android:text="客户电话：" />

        <EditText
            style="@style/et_style"
            android:inputType="text"
            android:text="13166015579" />


    </LinearLayout>

    <View
        style="@style/line_light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="12dp">

        <TextView
            style="@style/black_text_bold_13sp"
            android:layout_width="80dp"
            android:text="会员级别：" />

        <EditText
            style="@style/et_style"
            android:inputType="text"
            android:text="微信会员" />


    </LinearLayout>

    <View
        style="@style/line_light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="12dp">

        <TextView
            style="@style/black_text_bold_13sp"
            android:layout_width="80dp"
            android:text="可用余额：" />

        <EditText
            style="@style/et_style"
            android:inputType="text"
            android:text="5元" />


    </LinearLayout>

    <View
        style="@style/line_light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="12dp">

        <TextView
            style="@style/black_text_bold_13sp"
            android:layout_width="80dp"
            android:text="营业点：" />

        <EditText
            style="@style/et_style"
            android:inputType="text"
            android:text="金桥店" />


    </LinearLayout>

    <View
        style="@style/line_light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="12dp">

        <TextView
            style="@style/black_text_bold_13sp"
            android:layout_width="80dp"
            android:text="消费金额：" />

        <EditText
            style="@style/et_style"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:inputType="text"
            android:hint="输入金额"
            android:layout_marginLeft="12dp"
            android:layout_width="90dp"
            android:background="@drawable/shape_gray5"/>
        <TextView
            style="@style/black_text_13sp"
            android:layout_marginLeft="12dp"
            android:text="元"/>


    </LinearLayout>


    <View
        style="@style/line_light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="12dp">

        <TextView
            style="@style/black_text_bold_13sp"
            android:layout_width="80dp"
            android:text="消费备注：" />

        <EditText
            style="@style/et_style"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:inputType="text"
            android:hint="输入备注"
            android:layout_marginLeft="12dp"
            android:background="@drawable/shape_gray5"/>


    </LinearLayout>


    <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="0dp"/>






    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/btn_cancel"
                style="@style/btn_white_bg_blue_text"
                android:text="取消" />

            <TextView
                android:id="@+id/btn_bottom"
                style="@style/btn_blue_bg_white_text"
                android:layout_marginLeft="40dp"
                android:text="确认" />

        </LinearLayout>


    </RelativeLayout>
</LinearLayout>


