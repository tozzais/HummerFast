<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/drawer_layout"
    android:background="@color/gray_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/ll_main"
        android:background="@color/gray_bg"
        >

        <FrameLayout
            android:id="@+id/fl_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            />

        <View
            style="@style/line_light"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_home"
                style="@style/HomeTab">

                <ImageView
                    android:id="@+id/iv_home"
                    style="@style/HomeTabImageStyle"
                    android:src="@mipmap/home_selete" />
                <TextView
                    android:id="@+id/tv_home"
                    style="@style/MainTextStyle"
                    android:text="首页"
                    android:textColor="@color/baseColor"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_category"
                style="@style/HomeTab">

                <ImageView
                    android:id="@+id/iv_category"
                    style="@style/HomeTabImageStyle"
                    android:src="@mipmap/category" />

                <TextView
                    android:id="@+id/tv_category"
                    style="@style/MainTextStyle"
                    android:text="余额充值"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_community"
                style="@style/HomeTab">

                <ImageView
                    android:id="@+id/iv_community"
                    style="@style/HomeTabImageStyle"
                    android:src="@mipmap/integral_shop" />
                <TextView
                    android:id="@+id/tv_community"
                    style="@style/MainTextStyle"
                    android:text="扫码充电"

                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_cart"
                style="@style/HomeTab"
                android:paddingTop="0dp"
                >
                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="30dp">
                    <ImageView
                        android:id="@+id/iv_cart"
                        android:layout_centerInParent="true"
                        android:layout_alignParentBottom="true"
                        style="@style/HomeTabImageStyle"
                        android:src="@mipmap/cart" />
                    <com.flyco.roundview.RoundTextView
                        android:id="@+id/tv_cart_number"
                        app:rv_backgroundPressColor="@color/red"
                        app:rv_backgroundColor="@color/red"
                        app:rv_isRadiusHalfHeight="true"
                        style="@style/cart_number_style"
                        android:text="3"
                        android:visibility="gone"
                        />
                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_cart"
                    style="@style/MainTextStyle"
                    android:text="福利活动"
                    />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mine"
                style="@style/HomeTab">

                <ImageView
                    android:id="@+id/iv_mine"
                    style="@style/HomeTabImageStyle"
                    android:src="@mipmap/mine" />

                <TextView
                    android:id="@+id/tv_mine"
                    style="@style/MainTextStyle"
                    android:text="我的"
                    />

            </LinearLayout>


        </LinearLayout>




    </LinearLayout>


    <!--这是侧边栏滑动时出现的右边布局内容-->
    <LinearLayout
        android:id="@+id/drawer_content"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="end"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/statusbar_view_height" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="区域"
            android:textStyle="bold" />

        <GridView
            android:id="@+id/gv_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:horizontalSpacing="10dp"
            android:numColumns="3"
            android:verticalSpacing="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="停车费"
            android:textStyle="bold" />

        <GridView
            android:id="@+id/gv_fee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:horizontalSpacing="10dp"
            android:numColumns="3"
            android:verticalSpacing="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="充电方式"
            android:textStyle="bold" />

        <GridView
            android:id="@+id/gv_charge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:horizontalSpacing="10dp"
            android:numColumns="3"
            android:verticalSpacing="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="电压"
            android:textStyle="bold" />

        <GridView
            android:id="@+id/gv_voltage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:horizontalSpacing="10dp"
            android:numColumns="3"
            android:verticalSpacing="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="距离"
            android:textStyle="bold" />

        <GridView
            android:id="@+id/gv_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:horizontalSpacing="10dp"
            android:numColumns="3"
            android:verticalSpacing="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="电价"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_ele_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0~0"
                android:textStyle="bold"
                android:textColor="@color/baseColor"
                android:textSize="12sp"/>
        </LinearLayout>


        <SeekBar
            android:id="@+id/seekbar_voice"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:splitTrack="false"
            android:background="@mipmap/line"
            android:progressDrawable="@drawable/seekbar_bg"
            android:thumb="@drawable/seekbar_circle_bg"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/grayText"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_alignParentRight="true"
                android:textColor="@color/grayText"
                android:textSize="12sp"/>
        </RelativeLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="5" />

        <View
            style="@style/line_light"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_reset"
                style="@style/base_btn_style_large"
                android:background="@drawable/shape_gray50"
                android:gravity="center"
                android:textColor="@color/baseColor"
                android:text="重置"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tv_finish"
                style="@style/base_btn_style_large"
                android:background="@drawable/shape_basecolor50"
                android:gravity="center"
                android:text="完成"
                android:textSize="14sp"
                android:layout_marginLeft="40dp"/>



        </LinearLayout>


    </LinearLayout>



</androidx.drawerlayout.widget.DrawerLayout>
