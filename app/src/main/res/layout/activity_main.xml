<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/drawer_layout"
    android:background="@color/gray_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/ll_main"
        android:background="@color/gray_bg"
        >

        <FrameLayout
            android:id="@+id/fl_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            />

        <View
            style="@style/line_light"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_home"
                style="@style/HomeTab">

                <ImageView
                    android:id="@+id/iv_home"
                    style="@style/HomeTabImageStyle"
                    android:src="@mipmap/home_selete" />
                <TextView
                    android:id="@+id/tv_home"
                    style="@style/MainTextStyle"
                    android:text="首页"
                    android:textColor="@color/baseColor"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_category"
                style="@style/HomeTab">

                <ImageView
                    android:id="@+id/iv_category"
                    style="@style/HomeTabImageStyle"
                    android:src="@mipmap/category" />

                <TextView
                    android:id="@+id/tv_category"
                    style="@style/MainTextStyle"
                    android:text="余额充值"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_community"
                style="@style/HomeTab">

                <ImageView
                    android:id="@+id/iv_community"
                    style="@style/HomeTabImageStyle"
                    android:src="@mipmap/integral_shop" />
                <TextView
                    android:id="@+id/tv_community"
                    style="@style/MainTextStyle"
                    android:text="扫码充电"

                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_cart"
                style="@style/HomeTab"
                android:paddingTop="0dp"
                >
                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="30dp">
                    <ImageView
                        android:id="@+id/iv_cart"
                        android:layout_centerInParent="true"
                        android:layout_alignParentBottom="true"
                        style="@style/HomeTabImageStyle"
                        android:src="@mipmap/cart" />
                    <com.flyco.roundview.RoundTextView
                        android:id="@+id/tv_cart_number"
                        app:rv_backgroundPressColor="@color/red"
                        app:rv_backgroundColor="@color/red"
                        app:rv_isRadiusHalfHeight="true"
                        style="@style/cart_number_style"
                        android:text="3"
                        android:visibility="gone"
                        />
                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_cart"
                    style="@style/MainTextStyle"
                    android:text="福利活动"
                    />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mine"
                style="@style/HomeTab">

                <ImageView
                    android:id="@+id/iv_mine"
                    style="@style/HomeTabImageStyle"
                    android:src="@mipmap/mine" />

                <TextView
                    android:id="@+id/tv_mine"
                    style="@style/MainTextStyle"
                    android:text="我的"
                    />

            </LinearLayout>


        </LinearLayout>




    </LinearLayout>


    <!--这是侧边栏滑动时出现的右边布局内容-->
    <LinearLayout
        android:id="@+id/drawer_content"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="end"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="状态"
            android:textStyle="bold" />

        <GridView
            android:id="@+id/processed_state_gv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:horizontalSpacing="10dp"
            android:numColumns="3"
            android:verticalSpacing="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="时间"
            android:textStyle="bold" />

        <GridView
            android:id="@+id/processed_time_gv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:horizontalSpacing="10dp"
            android:numColumns="3"
            android:verticalSpacing="10dp"></GridView>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/processed_commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="完成"
            android:textSize="16sp" />
    </LinearLayout>



</androidx.drawerlayout.widget.DrawerLayout>
