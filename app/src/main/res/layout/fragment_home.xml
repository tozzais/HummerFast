<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/statusbar_view_height" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:elevation="0dp"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/sydw"
                android:drawableRight="@mipmap/xjt"
                android:drawablePadding="5dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxWidth="240dp"
                android:maxLines="1"
                android:paddingRight="12dp"
                android:text="上海"
                android:textColor="@color/black"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:gravity="center"
                android:maxWidth="240dp"
                android:maxLines="1"
                android:text="首页"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_right_icon"
                style="@style/click_toolbar_style"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:padding="12dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_right"
                style="@style/click_toolbar_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="right"
                android:padding="12dp"
                android:textColor="@color/black_title_color"
                android:textSize="14sp"
                android:visibility="gone" />


        </androidx.appcompat.widget.Toolbar>


    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_bg">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/banner" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="12dp">

                    <TextView
                        style="@style/base_text_style"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/icon_notice"
                        android:drawablePadding="5dp"
                        android:text="完成车辆认证，立享服务费抵用券~"
                        android:textSize="12sp" />

                    <TextView
                        style="@style/base_text_style"
                        android:padding="2dp"
                        android:text="详情"
                        android:textColor="@color/grayText"
                        android:textSize="12sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white">

                <RelativeLayout
                    android:id="@+id/rl_park_fee"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        style="@style/base_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableRight="@mipmap/icon_filter_right"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:text="停车费" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_charge_method"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        style="@style/base_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableRight="@mipmap/icon_filter_right"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:text="充电方式" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_filter"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        style="@style/base_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableRight="@mipmap/icon_filter_right2"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:text="筛选" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        style="@style/base_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableRight="@mipmap/icon_filter_right3"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:text="地图模式" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/collect_default"
                    android:padding="12dp"
                    android:layout_gravity="center_vertical"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:id="@+id/view"
                style="@style/line_light"/>

        </com.google.android.material.appbar.AppBarLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_scrollFlags="scroll">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <View
                android:id="@+id/filter_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#55000000"
                android:visibility="gone"
                />
        </RelativeLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">


    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</LinearLayout>
